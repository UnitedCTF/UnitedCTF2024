        <div class="color-buttons">
            <button style="background-color: #FF4500;" onclick="changeColor('circus-red')">Circus Red</button>
            <button style="background-color: #DC143C;" onclick="changeColor('clown-nose-red')">Clown Nose Red</button>
            <button style="background-color: #FFD700;" onclick="changeColor('tent-yellow')">Tent Yellow</button>
            <button style="background-color: #1E90FF;" onclick="changeColor('ringmaster-blue')">Ringmaster Blue</button>
            <button style="background-color: #8A2BE2;" onclick="changeColor('acrobatic-purple')">Acrobatic Purple</button>
            <button style="background-color: #FF69B4;" onclick="changeColor('performer-pink')">Performer Pink</button>
            <button style="background-color: #A9A9A9;" onclick="changeColor('elephant-gray')">Elephant Gray</button>
            <button style="background-color: #FFA500;" onclick="changeColor('lion-mane-orange')">Lion Mane Orange</button>
            <button style="background-color: #32CD32;" onclick="changeColor('juggler-green')">Juggler Green</button>
            <button style="background-color: #40E0D0;" onclick="changeColor('tightrope-turquoise')">Tightrope Turquoise</button>
        </div>
    </div>

    <script>
        async function changeColor(colorName) {
            try {
                const response = await fetch(`/color?name=${colorName}`);
                if (response.ok) {
                    const data = await response.json();
                    document.getElementById('flyer').style.backgroundColor = data[0].hex;
                } else {
                    console.error('Color not found');
                }
            } catch (error) {
                console.error('Error:', error);
            }
        }
    </script>
